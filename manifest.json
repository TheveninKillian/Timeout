{
  "manifest_version": 2,
  "author": "Killian_Thvn",
  "name": "Timeout",
  "version": "1.1.4",
  "description": "Timer based on the pomodoro technique",
  "icons": {
    "32": "src/img/icon.png",
    "64": "src/img/icon.png",
    "128": "src/img/icon.png"
  },
  "browser_action": {
    "default_icon": "src/img/icon.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "background",
    "tabs",
    "contextMenus"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "minimum_chrome_version": "55",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}